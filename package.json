{
  "name": "stylelint-config-xwp",
  "version": "0.1.0",
  "description": "XWP shareable config for stylelint based on WordPress standards",
  "keywords": [
    "code",
    "code style",
    "css",
    "lint",
    "linter",
    "linting",
    "stylelint",
    "stylelint-config",
    "stylelint-config-wordpress",
    "stylelint-config-xwp",
    "validate",
    "wordpress",
    "WordPress"
  ],
  "author": "Piotr Delawski <piotr.delawski@xwp.co> (https://www.xwp.co)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xwp/stylelint-config-xwp.git"
  },
  "homepage": "https://github.com/xwp/stylelint-config-xwp",
  "bugs": {
    "url": "https://github.com/xwp/stylelint-config-xwp/issues"
  },
  "main": "index.js",
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "index.js",
    "scss.js"
  ],
  "engines": {
    "node": ">=6.9.1"
  },
  "devDependencies": {
    "eslint": "^4.1.0",
    "eslint-plugin-jest": "^20.0.0",
    "eslint-plugin-wordpress": "git://github.com/WordPress-Coding-Standards/eslint-plugin-wordpress.git#b65ae0cea1199c9714641ed3be7ea98fcb27dd6c",
    "jest": "^20.0.0",
    "lodash": "^4.17.4",
    "npm-run-all": "^4.0.0",
    "npmpub": "^3.0.3",
    "remark-cli": "^4.0.0",
    "remark-preset-lint-consistent": "^2.0.0",
    "remark-preset-lint-recommended": "^3.0.0",
    "strip-ansi": "^4.0.0",
    "stylelint": "^8.0.0"
  },
  "peerDependencies": {
    "stylelint": "^8.0.0"
  },
  "scripts": {
    "dry-release": "npmpub --dry --verbose",
    "jest": "jest",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail",
    "lint": "npm-run-all --parallel lint:*",
    "pretest": "npm run lint",
    "release": "npmpub --verbose",
    "test": "jest",
    "watch": "jest --watch"
  },
  "jest": {
    "roots": [
      "__tests__"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/__tests__/*.js",
      "<rootDir>/__tests__/**/?(*.)test.js"
    ],
    "verbose": true
  },
  "remarkConfig": {
    "presets": [
      "lint-recommended",
      "lint-consistent"
    ]
  },
  "dependencies": {
    "stylelint-config-recommended": "^1.0.0",
    "stylelint-config-wordpress": "^12.0.0",
    "stylelint-no-unsupported-browser-features": "^1.0.0",
    "stylelint-scss": "^1.5.1"
  }
}
